{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    
    "tasks": [
        {
            "taskName": "Golang",
            "command": "go",
            "args": ["run", "${file}"],
            "isShellCommand": true,
            "showOutput": "always",
            "echoCommand": true
        },
        {
            "taskName": "python",
            "command": "python",
            "args": ["${file}"],
            "isShellCommand": true,
            "showOutput": "always",
            "echoCommand": true,
            "isBuildCommand": true
        }
    ]
}